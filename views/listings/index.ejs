<% layout('layout') %>

<div class="container mt-4">
  <div class="row g-4">
    <% listings.forEach(listing => { %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <a href="/listings/<%= listing._id %>" class="listing-card text-decoration-none">
          <div class="card h-100 shadow-sm">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" />
            <div class="card-body">
              <h5 class="card-title fw-semibold"><%= listing.title %></h5>
              <p class="card-text text-muted">â‚¹<%= listing.price %> / night</p>
              <p class="text-muted small">Listed by: <strong><%= listing.owner.username %></strong></p>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>
