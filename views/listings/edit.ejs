<% layout('layout') %>


<div class="form-container">
  <h2>Edit Listing</h2>
  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="listing-form">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= listing.title %>" required>

    <label for="description">Description</label>
    <textarea id="description" name="description" rows="4" required><%= listing.description %></textarea>

    <label for="image">Image URL</label>
    <input type="text" id="image" name="image[url]" value="<%= listing.image.url %>" required>

    <label for="price">Price (INR)</label>
    <input type="number" id="price" name="price" value="<%= listing.price %>" required>

    <label for="location">Location</label>
    <input type="text" id="location" name="location" value="<%= listing.location %>" required>

    <button type="submit" class="btn">Update Listing</button>
  </form>
</div>
