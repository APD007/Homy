<% layout('layout') %>

<div class="container text-center mt-5">
  <h1 class="display-4 text-danger">⚠️ <%= err.statusCode || 500 %> Error</h1>
  <p class="lead"><%= err.message %></p>

  <% if (err.stack) { %>
    <div class="mt-4 text-start mx-auto" style="max-width: 800px;">
      <h5 class="text-muted">Stack Trace:</h5>
      <pre class="bg-light p-3 rounded"><%= err.stack %></pre>
    </div>
  <% } %>

  <a href="/listings" class="btn btn-primary mt-4">← Back to Listings</a>
</div>
