<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<nav
  class="navbar navbar-expand-lg bg-body-tertiary shadow-sm sticky-top"
  style="background-color: rgba(255, 255, 255, 0.9); backdrop-filter: blur(8px)"
>
  <div class="container-fluid">
    <a
      class="navbar-brand d-flex align-items-center text-dark"
      href="/listings"
    >
      <i class="fa-regular fa-compass"></i>
      <span class="ms-2 fw-bold">Homy</span>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#homyNavbar"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="homyNavbar">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-dark" href="/listings">All Listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/listings/new">+ Add Listing</a>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if (!currentUser) { %>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/signup">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/login">Log In</a>
        </li>
        <% } else { %>
        <li class="nav-item d-flex align-items-center me-2">
          <span
            class="nav-link text-dark fw-semibold d-flex align-items-center"
          >
            <i class="fa-solid fa-user-circle me-1"></i>
            Hello,
            <span class="ms-1 text-primary"><%= currentUser.username %></span>
          </span>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" href="/logout">Log Out</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
